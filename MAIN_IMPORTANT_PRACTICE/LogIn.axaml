<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MAIN_IMPORTANT_PRACTICE.LogIn"
        Title="LogIn">
    
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        
        <Grid ColumnDefinitions="*" RowDefinitions="Auto, Auto, Auto, Auto" 
              HorizontalAlignment="Center" VerticalAlignment="Center"
              Margin="0,50,0,0">

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Логин:" 
                       HorizontalAlignment="Center"/>
            <TextBox x:Name="LoginText" Text="{Binding Логин}" Grid.Row="1" Grid.Column="0" 
                     Width="350" Margin="0,0,0,20" 
                     HorizontalAlignment="Center" MaxLength="50"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Пароль:" 
                       HorizontalAlignment="Center"/>
            <TextBox x:Name="PasswordText" Text="{Binding Пароль}" Grid.Row="3" Grid.Column="0" 
                     Width="350" Margin="0,0,0,20" 
                     HorizontalAlignment="Center" PasswordChar="♪" MaxLength="50"/>
        </Grid>

        <Button x:Name="LoginButton" Margin="0,100,0,0" 
                HorizontalAlignment="Center" Content="Войти" FontSize="30" Click="LoginButton_Click"/>
    </StackPanel>
</Window>