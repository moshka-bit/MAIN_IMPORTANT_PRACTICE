<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MAIN_IMPORTANT_PRACTICE.TeacherControl_AdminAndDepartment">
<Grid RowDefinitions="Auto,*,Auto">
        <!-- Верхняя панель с поиском -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
            <TextBox x:Name="FilterTextBox" 
                     Width="200" 
                     TextChanged="FilterTextBox_TextChanged_1"
                     Watermark="ФИО преподавателя"/>
        </StackPanel>

        <!-- Основная область с DataGrid -->
        <DataGrid Name="TeacherControlDataGrid" Grid.Row="1" IsReadOnly="True" DoubleTapped="TeacherControlDataGrid_DoubleTapped">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ТабНомер}" Header="Таб.Номер"/>
                <DataGridTextColumn Binding="{Binding Шифр}" Header="Шифр"/>
                <DataGridTextColumn Binding="{Binding Фамилия}" Header="ФИО"/>
                <DataGridTextColumn Binding="{Binding ШефNavigation.Фамилия}" Header="Шеф"/>
                <DataGridTextColumn Binding="{Binding Логин}" Header="Логин"/>
                <DataGridTextColumn Binding="{Binding Пароль}" Header="Пароль"/>
                <DataGridTextColumn Binding="{Binding Преподаватель.Звание}" Header="Звание"/>
                <DataGridTextColumn Binding="{Binding Преподаватель.Степень}" Header="Степень"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Нижняя панель с кнопкой Добавить -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
            <Button x:Name="AddButton" 
                    Content="Добавить" 
                    Width="83" 
                    Height="30"
                    Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
